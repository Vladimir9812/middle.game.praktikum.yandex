{
  "env": {
    "browser": true,
    "node": true,
    "es2024": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "airbnb",
    "airbnb-typescript",
    "plugin:unicorn/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "import",
    "@typescript-eslint",
    "prettier",
    "unicorn"
  ],
  "ignorePatterns": [
    "dist/**",
    "vite.config.ts",
    "jest.config.js",
    "stylelint.config.js"
  ],
  "rules": {
    "import/prefer-default-export": "off",
    "react/react-in-jsx-scope": "off",
    "unicorn/prevent-abbreviations": "warn",
    "unicorn/no-null": "warn",
    "unicorn/filename-case": [
      "error",
      {
        "cases": {
          "kebabCase": true,
          "pascalCase": true
        }
      }
    ],
    "@typescript-eslint/ban-ts-comment": 1,
    "semi": "error",
    "quotes": [
      "warn",
      "single"
    ],
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "off",
    "max-len": [
      "error",
      {
        "code": 100
      }
    ],
    "space-before-blocks": "error",
    "no-multi-spaces": "error",
    "no-trailing-spaces": "error",
    "@typescript-eslint/no-explicit-any": "warn",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "object-curly-newline": "off",
    "import/order": [
      "error",
      {
        "newlines-between": "always",
        "pathGroups": [
          {
            "pattern": "@app/*",
            "group": "internal"
          }
        ],
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          [
            "sibling",
            "index"
          ]
        ],
        "pathGroupsExcludedImportTypes": [
          "builtin"
        ]
      }
    ]
  }
}
